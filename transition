#!/usr/bin/env coffee

unless process.env.HOUMIO_SITEKEY
  console.log 'Please set env variable HOUMIO_SITEKEY'
  process.exit

unless process.argv.length == 4
  console.log 'Usage: transition "Scene name" 2230'
  process.exit 1

sceneName = process.argv[2]
time = process.argv[3]
hour = time[0..1]
minute = time[2..3]
console.log hour
console.log minute